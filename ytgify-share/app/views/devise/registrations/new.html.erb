<div class="min-h-screen flex items-center justify-center bg-[#0a0a0a] py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <%= link_to root_path, class: "inline-flex items-center space-x-2 text-2xl font-bold bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] bg-clip-text text-transparent hover:opacity-80 mb-8" do %>
        <svg class="w-10 h-10 text-[#E91E8C]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
        </svg>
        <span>ytgify</span>
      <% end %>
      <h2 class="mt-6 text-3xl font-bold text-white">
        Create your account
      </h2>
      <p class="mt-2 text-gray-400">
        Join the community and start sharing GIFs
      </p>
    </div>

    <!-- Form -->
    <div class="bg-gray-900 rounded-lg border border-gray-800 p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false } }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Username -->
        <div class="mb-6">
          <%= f.label :username, class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.text_field :username,
              autofocus: true,
              autocomplete: "username",
              placeholder: "Choose a unique username",
              class: "w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-[#E91E8C] focus:border-transparent" %>
          <p class="mt-1 text-xs text-gray-500">Letters, numbers, and underscores only. 3-30 characters.</p>
        </div>

        <!-- Email -->
        <div class="mb-6">
          <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.email_field :email,
              autocomplete: "email",
              class: "w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-[#E91E8C] focus:border-transparent" %>
        </div>

        <!-- Password -->
        <div class="mb-6">
          <%= f.label :password, class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.password_field :password,
              autocomplete: "new-password",
              class: "w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-[#E91E8C] focus:border-transparent" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-gray-500">Minimum <%= @minimum_password_length %> characters</p>
          <% end %>
        </div>

        <!-- Password Confirmation -->
        <div class="mb-6">
          <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-[#E91E8C] focus:border-transparent" %>
        </div>

        <!-- Submit -->
        <div class="mb-6">
          <%= f.submit "Create Account", class: "w-full px-4 py-3 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-lg hover:opacity-90 font-medium cursor-pointer transition-colors" %>
        </div>

        <!-- Terms -->
        <p class="text-xs text-gray-500 text-center mb-6">
          By signing up, you agree to our Terms of Service and Privacy Policy
        </p>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-700"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-gray-900 text-gray-500">Or sign up with</span>
        </div>
      </div>

      <!-- Google Sign-Up -->
      <% if devise_mapping.omniauthable? && resource_class.omniauth_providers.present? %>
        <div class="mb-6">
          <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full inline-flex items-center justify-center px-4 py-3 border border-gray-700 rounded-lg bg-gray-800 hover:bg-gray-700 transition-colors" do %>
            <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span class="text-gray-300 font-medium">Continue with Google</span>
          <% end %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-700"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-gray-900 text-gray-500">Already have an account?</span>
        </div>
      </div>

      <!-- Sign in link -->
      <div class="text-center">
        <%= link_to "Sign in instead", new_session_path(resource_name), class: "text-[#E91E8C] hover:text-[#E91E8C]/80 font-medium" %>
      </div>
    </div>

    <!-- Back to home -->
    <div class="text-center">
      <%= link_to root_path, class: "text-sm text-gray-500 hover:text-gray-300" do %>
        ‚Üê Back to home
      <% end %>
    </div>
  </div>
</div>
