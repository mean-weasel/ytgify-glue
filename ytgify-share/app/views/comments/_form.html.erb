<%= form_with model: [gif, comment || gif.comments.build],
              url: gif_comments_path(gif),
              data: { turbo_frame: "_top" },
              class: "mb-8" do |f| %>
  <div class="flex space-x-3">
    <!-- User Avatar -->
    <div class="w-10 h-10 bg-indigo-600 text-white rounded-full flex items-center justify-center font-semibold flex-shrink-0">
      <%= current_user.username.first.upcase %>
    </div>

    <div class="flex-1">
      <%= f.text_area :content,
          placeholder: "Add a comment...",
          rows: 3,
          autofocus: comment.present?,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent resize-none transition-shadow #{'border-red-500' if comment&.errors&.any?}" %>

      <!-- Error Messages -->
      <% if comment&.errors&.any? %>
        <div class="mt-2 p-3 bg-red-50 border border-red-200 rounded-lg">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-red-600 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <div class="text-sm text-red-700">
              <%= comment.errors.full_messages.to_sentence %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Submit Button -->
      <div class="mt-3 flex justify-end space-x-2">
        <%= f.submit "Post Comment",
            class: "px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium cursor-pointer transition-colors shadow-sm hover:shadow-md",
            data: { turbo_submits_with: "Posting..." } %>
      </div>
    </div>
  </div>
<% end %>
