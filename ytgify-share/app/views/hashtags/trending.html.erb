<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <!-- Page Header -->
    <div class="bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] rounded-lg p-8 mb-6 text-white">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h1 class="text-4xl font-bold mb-2 flex items-center">
            <svg class="w-10 h-10 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
            Trending Hashtags
          </h1>
          <p class="text-white/90">The hottest topics on YTGify right now</p>
        </div>

        <!-- Browse All Link -->
        <%= link_to hashtags_path, class: "px-6 py-3 bg-white/20 backdrop-blur-sm text-white rounded-full hover:bg-white/30 font-medium transition-all border border-white/30" do %>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <span>Browse All</span>
          </div>
        <% end %>
      </div>

      <p class="text-sm text-white/75">Updated every 15 minutes</p>
    </div>

    <!-- Trending Hashtags List -->
    <% if @hashtags.any? %>
      <div class="space-y-4 mb-8">
        <% @hashtags.each_with_index do |hashtag, index| %>
          <%= link_to hashtag_path(hashtag.name), class: "block bg-gray-900 rounded-lg border border-gray-800 hover:border-gray-700 transition-all p-6 group border-l-4 #{rank_border_color(index + 1 + (@pagy.page - 1) * @pagy.limit)}" do %>
            <div class="flex items-center">
              <!-- Rank Badge -->
              <div class="flex-shrink-0 mr-6">
                <div class="w-16 h-16 rounded-full flex items-center justify-center font-bold text-2xl <%= rank_badge_color(index + 1 + (@pagy.page - 1) * @pagy.limit) %>">
                  <%= index + 1 + (@pagy.page - 1) * @pagy.limit %>
                </div>
              </div>

              <!-- Hashtag Info -->
              <div class="flex-1 min-w-0">
                <h3 class="text-2xl font-bold text-white mb-1 group-hover:text-[#E91E8C] transition-colors truncate">
                  #<%= hashtag.name %>
                </h3>

                <div class="flex items-center space-x-4 text-sm text-gray-400">
                  <!-- Usage Count -->
                  <div class="flex items-center space-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
                    </svg>
                    <span><%= number_with_delimiter(hashtag.usage_count) %> GIFs</span>
                  </div>

                  <!-- Trending Score -->
                  <% if hashtag.respond_to?(:trending_score) && hashtag.trending_score %>
                    <div class="flex items-center space-x-1">
                      <svg class="w-4 h-4 text-[#E91E8C]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                      </svg>
                      <span class="text-[#E91E8C] font-medium"><%= number_with_delimiter(hashtag.trending_score.round) %> trend score</span>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Chevron -->
              <div class="flex-shrink-0 ml-4">
                <svg class="w-6 h-6 text-gray-600 group-hover:text-[#E91E8C] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @pagy.pages > 1 %>
        <div class="flex justify-center items-center space-x-2">
          <%== pagy_nav(@pagy, link_extra: 'class="px-4 py-2 border border-gray-700 rounded-md hover:bg-gray-800 transition-colors text-gray-300"') %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="bg-gray-900 rounded-lg border border-gray-800 p-12 text-center">
        <svg class="mx-auto h-20 w-20 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
        </svg>
        <h3 class="text-lg font-semibold text-white mb-2">No trending hashtags yet</h3>
        <p class="text-gray-400 mb-6">Start creating and using hashtags to see what's trending!</p>
        <% if user_signed_in? %>
          <%= link_to new_gif_path, class: "inline-block px-6 py-3 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-full hover:opacity-90 font-medium transition-colors" do %>
            Upload a GIF
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "inline-block px-6 py-3 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-full hover:opacity-90 font-medium transition-colors" do %>
            Sign In to Upload
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
