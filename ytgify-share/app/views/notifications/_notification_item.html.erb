<div class="<%= notification.read? ? 'bg-white' : 'bg-indigo-50' %> px-6 py-4 border-b border-gray-200 hover:bg-gray-50 hover:pl-8 transition-all cursor-pointer"
     id="notification_<%= notification.id %>">
  <div class="flex items-start space-x-3">
    <!-- Actor Avatar -->
    <div class="flex-shrink-0">
      <%= link_to user_path(notification.actor.username), class: "block" do %>
        <div class="w-10 h-10 bg-indigo-600 text-white rounded-full flex items-center justify-center font-semibold">
          <%= notification.actor.username.first.upcase %>
        </div>
      <% end %>
    </div>

    <!-- Notification Content -->
    <div class="flex-1 min-w-0">
      <p class="text-sm text-gray-900">
        <%= link_to notification.actor.username, user_path(notification.actor.username), class: "font-semibold hover:text-indigo-600" %>
        <span class="text-gray-600"><%= notification.message.split(notification.actor.username).last %></span>
      </p>
      <p class="mt-1 text-xs text-gray-500">
        <%= time_ago_in_words(notification.created_at) %> ago
      </p>
    </div>

    <!-- Actions -->
    <div class="flex-shrink-0 flex items-center space-x-2">
      <% unless notification.read? %>
        <%= button_to mark_as_read_notification_path(notification),
            method: :post,
            class: "text-xs text-indigo-600 hover:text-indigo-700 font-medium" do %>
          Mark as read
        <% end %>
      <% end %>
      <% unless notification.read? %>
        <span class="w-2 h-2 bg-indigo-600 rounded-full"></span>
      <% end %>
    </div>
  </div>
</div>
