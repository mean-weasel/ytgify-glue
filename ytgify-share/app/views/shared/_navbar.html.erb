<nav class="fixed top-0 left-0 right-0 bg-white border-b border-gray-200 z-50">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo and Brand -->
      <div class="flex items-center space-x-8">
        <%= link_to root_path, class: "flex items-center space-x-2 text-xl font-bold text-indigo-600 hover:text-indigo-700" do %>
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
          </svg>
          <span>ytgify</span>
        <% end %>

        <!-- Main Navigation -->
        <div class="hidden md:flex space-x-6">
          <%= link_to "Feed", app_feed_path, class: "font-medium transition-colors #{current_page?(app_feed_path) ? 'text-indigo-600 border-b-2 border-indigo-600 pb-1' : 'text-gray-700 hover:text-indigo-600'}" %>
          <%= link_to "Trending", app_trending_path, class: "font-medium transition-colors #{current_page?(app_trending_path) ? 'text-indigo-600 border-b-2 border-indigo-600 pb-1' : 'text-gray-700 hover:text-indigo-600'}" %>
          <%= link_to "Collections", app_collections_path, class: "font-medium transition-colors #{request.path.start_with?('/collections') ? 'text-indigo-600 border-b-2 border-indigo-600 pb-1' : 'text-gray-700 hover:text-indigo-600'}" %>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden ml-auto mr-4" data-controller="mobile-menu">
        <button
          data-action="click->mobile-menu#toggle"
          class="p-2 min-h-[44px] min-w-[44px] flex items-center justify-center text-gray-600 hover:text-gray-900 rounded-lg">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <!-- Mobile Menu Overlay -->
        <div data-mobile-menu-target="backdrop" class="hidden fixed inset-0 bg-black bg-opacity-50 z-40" data-action="click->mobile-menu#close"></div>

        <!-- Mobile Menu Drawer -->
        <div data-mobile-menu-target="menu" class="hidden fixed top-0 left-0 bottom-0 w-64 bg-white shadow-xl z-50 overflow-y-auto">
          <!-- Header -->
          <div class="flex items-center justify-between p-4 border-b">
            <span class="text-xl font-bold text-indigo-600">ytgify</span>
            <button data-action="click->mobile-menu#toggle" class="p-2 min-h-[44px] min-w-[44px] flex items-center justify-center text-gray-600 hover:text-gray-900 rounded-lg">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>

          <!-- Navigation Links -->
          <nav class="p-4 space-y-2">
            <%= link_to app_feed_path, class: "block py-3 px-4 rounded-lg font-medium #{current_page?(app_feed_path) ? 'bg-indigo-50 text-indigo-600' : 'text-gray-700 hover:bg-gray-100'}" do %>
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Feed
              </div>
            <% end %>
            <%= link_to app_trending_path, class: "block py-3 px-4 rounded-lg font-medium #{current_page?(app_trending_path) ? 'bg-indigo-50 text-indigo-600' : 'text-gray-700 hover:bg-gray-100'}" do %>
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
                Trending
              </div>
            <% end %>
            <%= link_to app_collections_path, class: "block py-3 px-4 rounded-lg font-medium #{request.path.start_with?('/collections') ? 'bg-indigo-50 text-indigo-600' : 'text-gray-700 hover:bg-gray-100'}" do %>
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                </svg>
                Collections
              </div>
            <% end %>

            <% if user_signed_in? %>
              <!-- Upload Button (Mobile) -->
              <%= link_to new_app_gif_path, class: "block py-3 px-4 bg-indigo-600 text-white hover:bg-indigo-700 rounded-lg font-medium" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                  </svg>
                  Upload GIF
                </div>
              <% end %>

              <!-- Divider -->
              <div class="border-t border-gray-200 my-2"></div>

              <!-- Profile -->
              <%= link_to app_user_path(current_user.username), class: "block py-3 px-4 text-gray-700 hover:bg-gray-100 rounded-lg font-medium" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  Profile
                </div>
              <% end %>

              <!-- Notifications -->
              <%= link_to app_notifications_path, class: "block py-3 px-4 text-gray-700 hover:bg-gray-100 rounded-lg font-medium relative" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                  </svg>
                  Notifications
                  <% unread_count = current_user.notifications.unread.count %>
                  <% if unread_count > 0 %>
                    <span class="ml-auto inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-white bg-red-500 rounded-full">
                      <%= unread_count %>
                    </span>
                  <% end %>
                </div>
              <% end %>

              <!-- Settings -->
              <%= link_to edit_user_registration_path, class: "block py-3 px-4 text-gray-700 hover:bg-gray-100 rounded-lg font-medium" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  Settings
                </div>
              <% end %>

              <!-- Divider -->
              <div class="border-t border-gray-200 my-2"></div>

              <!-- Sign Out -->
              <%= button_to destroy_user_session_path, method: :delete, class: "w-full text-left py-3 px-4 text-red-600 hover:bg-red-50 rounded-lg font-medium" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                  </svg>
                  Sign Out
                </div>
              <% end %>
            <% else %>
              <!-- Sign In / Sign Up (Mobile) -->
              <div class="border-t border-gray-200 my-2"></div>
              <%= link_to new_user_session_path, class: "block py-3 px-4 text-gray-700 hover:bg-gray-100 rounded-lg font-medium" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                  </svg>
                  Sign In
                </div>
              <% end %>
              <%= link_to new_user_registration_path, class: "block py-3 px-4 bg-indigo-600 text-white hover:bg-indigo-700 rounded-lg font-medium" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                  </svg>
                  Sign Up
                </div>
              <% end %>
            <% end %>
          </nav>
        </div>
      </div>

      <!-- Search Bar (Desktop) -->
      <div class="hidden md:block flex-1 max-w-md mx-8">
        <%= form_with url: app_gifs_path, method: :get, class: "relative" do |f| %>
          <%= f.text_field :q,
              placeholder: "Search GIFs...",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
          <button type="submit" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        <% end %>
      </div>

      <!-- Right Side Actions -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <!-- Upload Button -->
          <%= link_to new_app_gif_path, class: "hidden md:inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Upload
          <% end %>

          <!-- Notifications -->
          <%= link_to app_notifications_path, class: "relative p-2 min-h-[44px] min-w-[44px] flex items-center justify-center text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg", id: "notifications_bell" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
            <% unread_count = current_user.notifications.unread.count %>
            <% if unread_count > 0 %>
              <span class="absolute top-1 right-1 inline-flex items-center justify-center px-1.5 py-0.5 text-xs font-bold leading-none text-white bg-red-500 rounded-full" id="unread_count">
                <%= unread_count %>
              </span>
            <% end %>
          <% end %>

          <!-- User Menu Dropdown -->
          <div class="relative" data-controller="dropdown">
            <button
              data-action="click->dropdown#toggle"
              class="flex items-center space-x-2 p-2 min-h-[44px] hover:bg-gray-100 rounded-lg">
              <div class="w-8 h-8 bg-indigo-600 text-white rounded-full flex items-center justify-center font-semibold">
                <%= current_user.username.first.upcase %>
              </div>
            </button>

            <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1">
              <%= link_to app_user_path(current_user.username), class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  Profile
                </div>
              <% end %>
              <%= link_to app_collections_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                  </svg>
                  Collections
                </div>
              <% end %>
              <%= link_to edit_user_registration_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  Settings
                </div>
              <% end %>
              <div class="border-t border-gray-200 my-1"></div>
              <%= button_to destroy_user_session_path, method: :delete, class: "w-full text-left px-4 py-2 text-red-600 hover:bg-red-50" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                  </svg>
                  Sign Out
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <!-- Sign In / Sign Up -->
          <%= link_to "Sign In", new_user_session_path, class: "text-gray-700 hover:text-indigo-600 font-medium" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
