<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <%= link_to root_path, class: "inline-flex items-center space-x-2 text-2xl font-bold text-indigo-600 hover:text-indigo-700 mb-8" do %>
        <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
        </svg>
        <span>ytgify</span>
      <% end %>
      <h2 class="mt-6 text-3xl font-bold text-gray-900">
        Welcome back
      </h2>
      <p class="mt-2 text-gray-600">
        Sign in to your account
      </p>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-lg shadow-lg p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <!-- Email -->
        <div class="mb-6">
          <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>

        <!-- Password -->
        <div class="mb-6">
          <div class="flex items-center justify-between mb-2">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-indigo-600 hover:text-indigo-700" %>
          </div>
          <%= f.password_field :password,
              autocomplete: "current-password",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>

        <!-- Remember me -->
        <% if devise_mapping.rememberable? %>
          <div class="mb-6">
            <label class="flex items-center">
              <%= f.check_box :remember_me, class: "w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
              <span class="ml-2 text-sm text-gray-700">Remember me</span>
            </label>
          </div>
        <% end %>

        <!-- Submit -->
        <div class="mb-6">
          <%= f.submit "Sign In", class: "w-full px-4 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium cursor-pointer transition-colors" %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">Don't have an account?</span>
        </div>
      </div>

      <!-- Sign up link -->
      <div class="text-center">
        <%= link_to "Create an account", new_registration_path(resource_name), class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
      </div>
    </div>

    <!-- Back to home -->
    <div class="text-center">
      <%= link_to root_path, class: "text-sm text-gray-600 hover:text-gray-900" do %>
        ‚Üê Back to home
      <% end %>
    </div>
  </div>
</div>
