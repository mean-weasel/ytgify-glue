<% if followers&.any? %>
  <!-- Followers List -->
  <div class="space-y-4 mb-8">
    <% followers.each do |follower| %>
      <div class="flex items-center justify-between p-4 bg-gray-900 border border-gray-800 rounded-lg hover:border-gray-700 transition-all">
        <!-- User Info -->
        <%= link_to user_path(follower.username), class: "flex items-center space-x-4 flex-1 min-w-0" do %>
          <!-- Avatar -->
          <div class="w-12 h-12 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-full flex items-center justify-center font-semibold text-lg flex-shrink-0">
            <%= follower.username.first.upcase %>
          </div>

          <!-- Details -->
          <div class="flex-1 min-w-0">
            <div class="font-semibold text-white truncate"><%= follower.display_name %></div>
            <div class="text-sm text-gray-400">@<%= follower.username %></div>

            <!-- Stats -->
            <div class="flex items-center space-x-4 text-xs text-gray-500 mt-1">
              <span><%= number_with_delimiter(follower.follower_count) %> followers</span>
              <span><%= number_with_delimiter(follower.gifs.count) %> GIFs</span>
            </div>
          </div>
        <% end %>

        <!-- Follow Button -->
        <% if user_signed_in? %>
          <% if current_user != follower %>
            <div id="follow_button_<%= follower.id %>">
              <%= render "follows/button", user: follower, following: current_user.following?(follower) %>
            </div>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "px-4 py-2 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-lg hover:opacity-90 font-medium transition-colors text-sm" do %>
            Follow
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <% if pagy.pages > 1 %>
    <div class="flex justify-center items-center space-x-2">
      <%== pagy_nav(pagy, link_extra: 'data-turbo-frame="profile_content" class="px-4 py-2 border border-gray-700 rounded-md hover:bg-gray-800 transition-colors text-gray-300"') %>
    </div>
  <% end %>
<% else %>
  <!-- Empty State -->
  <div class="text-center py-16">
    <svg class="mx-auto h-16 w-16 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>

    <h3 class="text-xl font-semibold text-white mb-2">No followers yet</h3>

    <p class="text-gray-400 mb-6">
      <% if user_signed_in? && current_user == user %>
        You don't have any followers yet. Share your GIFs to grow your audience!
      <% else %>
        <%= user.display_name || user.username %> doesn't have any followers yet.
      <% end %>
    </p>
  </div>
<% end %>
