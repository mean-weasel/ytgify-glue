<%# Skeleton loading placeholder for GIF cards %>
<div class="bg-white rounded-lg shadow-sm overflow-hidden animate-pulse">
  <!-- Image placeholder -->
  <div class="aspect-video bg-gray-200"></div>

  <!-- Content placeholder -->
  <div class="p-4">
    <!-- Title -->
    <div class="h-4 bg-gray-200 rounded w-3/4 mb-2"></div>

    <!-- Username and time -->
    <div class="flex items-center space-x-2 mb-3">
      <div class="h-3 bg-gray-200 rounded w-20"></div>
      <div class="h-3 bg-gray-200 rounded w-16"></div>
    </div>

    <!-- Hashtags -->
    <div class="flex space-x-2 mb-3">
      <div class="h-5 bg-gray-200 rounded-full w-16"></div>
      <div class="h-5 bg-gray-200 rounded-full w-12"></div>
    </div>

    <!-- Actions bar -->
    <div class="flex items-center justify-between pt-3 border-t border-gray-100">
      <div class="h-6 bg-gray-200 rounded w-12"></div>
      <div class="h-6 bg-gray-200 rounded w-12"></div>
      <div class="h-6 bg-gray-200 rounded w-12"></div>
      <div class="h-6 bg-gray-200 rounded w-8"></div>
    </div>
  </div>
</div>
