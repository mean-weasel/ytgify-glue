<%# Navbar - Fixed header with search and user actions %>
<%# Reference: /mockups/feed.html lines 32-87 %>
<nav class="fixed top-0 left-0 right-0 bg-[#0a0a0a]/95 backdrop-blur-sm border-b border-gray-800 z-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo and Brand -->
      <div class="flex items-center space-x-8">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <div class="w-8 h-8 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"/>
            </svg>
          </div>
          <span class="text-xl font-bold">ytgify</span>
        <% end %>

        <!-- Desktop Nav -->
        <nav class="hidden md:flex items-center space-x-6">
          <%= link_to "Feed", root_path, class: "font-medium transition #{current_page?(root_path) ? 'text-[#E91E8C]' : 'text-gray-400 hover:text-white'}" %>
          <%= link_to "Trending", trending_path, class: "font-medium transition #{current_page?(trending_path) ? 'text-[#E91E8C]' : 'text-gray-400 hover:text-white'}" %>
          <%= link_to "Collections", collections_path, class: "font-medium transition #{request.path.start_with?('/collections') ? 'text-[#E91E8C]' : 'text-gray-400 hover:text-white'}" %>
        </nav>
      </div>

      <!-- Search & Actions -->
      <div class="flex items-center space-x-4">
        <!-- Search (hidden on mobile) -->
        <div class="hidden md:block relative">
          <%= form_with url: gifs_path, method: :get, class: "relative" do |f| %>
            <%= f.text_field :q,
                placeholder: "Search GIFs...",
                class: "w-64 bg-gray-900 border border-gray-700 rounded-full px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-[#E91E8C] focus:border-transparent" %>
            <button type="submit" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-300">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </button>
          <% end %>
        </div>

        <% if user_signed_in? %>
          <!-- Create GIF Button -->
          <%= link_to new_gif_path, class: "hidden sm:flex bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white px-4 py-2 rounded-full text-sm font-medium hover:opacity-90 transition items-center space-x-2" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            <span>Create GIF</span>
          <% end %>

          <!-- Notifications -->
          <%= link_to notifications_path, class: "relative p-2 text-gray-400 hover:text-white transition", id: "notifications_bell" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
            </svg>
            <% unread_count = current_user.notifications.unread.count %>
            <% if unread_count > 0 %>
              <span class="absolute top-1 right-1 w-2 h-2 bg-[#E91E8C] rounded-full"></span>
            <% end %>
          <% end %>

          <!-- Profile Dropdown -->
          <div class="relative" data-controller="dropdown">
            <button
              data-action="click->dropdown#toggle"
              class="w-8 h-8 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] rounded-full flex items-center justify-center text-sm font-bold">
              <%= current_user.username.first.upcase %>
            </button>

            <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-gray-900 rounded-lg shadow-lg border border-gray-700 py-1">
              <%= link_to user_path(current_user.username), class: "block px-4 py-2 text-gray-400 hover:bg-gray-800 hover:text-white" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  Profile
                </div>
              <% end %>
              <%= link_to collections_path, class: "block px-4 py-2 text-gray-400 hover:bg-gray-800 hover:text-white" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                  </svg>
                  Collections
                </div>
              <% end %>
              <%= link_to edit_user_registration_path, class: "block px-4 py-2 text-gray-400 hover:bg-gray-800 hover:text-white" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  Settings
                </div>
              <% end %>
              <div class="border-t border-gray-700 my-1"></div>
              <%= button_to destroy_user_session_path, method: :delete, data: { turbo: false }, class: "w-full text-left px-4 py-2 text-red-400 hover:bg-red-900/30" do %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                  </svg>
                  Sign Out
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <!-- Sign In / Sign Up -->
          <%= link_to "Sign In", new_user_session_path, class: "text-gray-400 hover:text-[#E91E8C] font-medium hidden sm:inline" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "px-4 py-2 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-full text-sm font-medium hover:opacity-90" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
