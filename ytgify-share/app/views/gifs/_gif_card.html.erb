<%# GIF Card Component - Single-column feed design %>
<%# Reference: /mockups/feed.html lines 146-223 %>
<%# Set default values for optional locals %>
<% show_remove_button ||= false %>
<% collection ||= nil %>

<div id="<%= dom_id(gif) %>" class="relative">
<% cache [gif, gif.user, gif.hashtags.maximum(:updated_at)] do %>
<article class="rounded-xl overflow-hidden">
  <!-- GIF Media -->
  <%= link_to gif_path(gif), data: { turbo_frame: "_top" }, class: "relative aspect-[4/3] bg-gray-900 rounded-xl overflow-hidden block group" do %>
    <% if gif.file.attached? %>
      <%= image_tag gif.file, alt: gif.title, class: "w-full h-full object-cover" %>
    <% elsif gif.thumbnail_url.present? %>
      <%= image_tag gif.thumbnail_url, alt: gif.title, class: "w-full h-full object-cover" %>
    <% else %>
      <div class="flex items-center justify-center h-full text-gray-600">
        <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
        </svg>
      </div>
    <% end %>

    <!-- Duration Badge -->
    <% if gif.duration %>
      <span class="absolute bottom-3 right-3 bg-black/70 text-white text-xs px-2 py-1 rounded">
        <%= Time.at(gif.duration).utc.strftime("%M:%S") %>
      </span>
    <% end %>

    <!-- Play button overlay on hover -->
    <div class="absolute inset-0 flex items-center justify-center bg-black/0 group-hover:bg-black/20 transition-all">
      <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-90 transition-opacity">
        <svg class="w-6 h-6 text-gray-800 ml-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z" />
        </svg>
      </div>
    </div>
  <% end %>

  <!-- Card Footer -->
  <div class="pt-4">
    <!-- User Info Row -->
    <div class="flex items-center space-x-3 mb-2">
      <%= link_to user_path(gif.user.username), class: "flex-shrink-0" do %>
        <div class="w-10 h-10 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] rounded-full flex items-center justify-center text-sm font-bold">
          <%= gif.user.username.first.upcase %>
        </div>
      <% end %>
      <div class="flex-1 min-w-0">
        <div class="flex items-center space-x-2">
          <%= link_to user_path(gif.user.username), class: "font-medium truncate hover:text-[#E91E8C] transition" do %>
            <%= gif.user.username %>
          <% end %>
          <span class="text-gray-500 text-sm">Â· <%= time_ago_in_words(gif.created_at) %> ago</span>
        </div>
      </div>
    </div>

    <!-- Title/Caption -->
    <p class="text-lg mb-2">
      <%= link_to gif.title, gif_path(gif), class: "hover:text-[#E91E8C] transition", data: { turbo_frame: "_top" } %>
    </p>

    <!-- Hashtags -->
    <% if gif.hashtags.any? %>
      <div class="flex flex-wrap gap-2 mb-4">
        <% gif.hashtags.first(5).each do |hashtag| %>
          <%= link_to hashtag_path(hashtag.name), class: "text-[#E91E8C] text-sm hover:underline" do %>
            #<%= hashtag.name %>
          <% end %>
        <% end %>
        <% if gif.hashtags.count > 5 %>
          <span class="text-gray-500 text-sm">+<%= gif.hashtags.count - 5 %> more</span>
        <% end %>
      </div>
    <% end %>

    <!-- Actions -->
    <div class="flex items-center justify-between pt-3 border-t border-gray-800">
      <div class="flex items-center space-x-6">
        <!-- Like Button -->
        <%= render "likes/like_button", gif: gif %>

        <!-- Comments -->
        <%= link_to gif_path(gif), data: { turbo_frame: "_top" }, class: "flex items-center space-x-2 text-gray-400 hover:text-white transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <span class="text-sm"><%= gif.comment_count %></span>
        <% end %>
      </div>

      <div class="flex items-center space-x-2">
        <!-- Share -->
        <button
          data-controller="share"
          data-share-url-value="<%= gif_url(gif) %>"
          data-share-title-value="<%= gif.title %>"
          data-action="click->share#share"
          class="p-2 text-gray-400 hover:text-white transition rounded-lg hover:bg-gray-800">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
          </svg>
        </button>

        <!-- Save to Collection -->
        <% if user_signed_in? %>
          <button
            data-action="click->collection-modal#show:prevent"
            data-gif-id="<%= gif.id %>"
            class="p-2 text-gray-400 hover:text-white transition rounded-lg hover:bg-gray-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
            </svg>
          </button>
        <% end %>

        <!-- More Options Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button data-action="click->dropdown#toggle" class="p-2 text-gray-400 hover:text-white transition rounded-lg hover:bg-gray-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
            </svg>
          </button>

          <div data-dropdown-target="menu" class="hidden absolute right-0 bottom-full mb-2 w-48 bg-gray-900 rounded-lg shadow-lg border border-gray-700 py-1 z-10">
            <% if show_remove_button && collection %>
              <%= button_to remove_gif_collection_path(collection, gif_id: gif.id),
                  method: :delete,
                  data: { turbo_confirm: "Remove this GIF from the collection?", action: "dropdown#toggle" },
                  class: "w-full text-left px-4 py-2 text-sm text-red-400 hover:bg-red-900/30" do %>
                Remove from Collection
              <% end %>
            <% end %>
            <% if user_signed_in? && current_user == gif.user %>
              <%= link_to "Edit", edit_gif_path(gif), class: "block px-4 py-2 text-sm text-gray-400 hover:bg-gray-800 hover:text-white", data: { action: "dropdown#toggle" } %>
              <%= button_to "Delete", gif_path(gif),
                  method: :delete,
                  data: { turbo_confirm: "Are you sure?", action: "dropdown#toggle" },
                  class: "w-full text-left px-4 py-2 text-sm text-red-400 hover:bg-red-900/30" %>
            <% end %>
            <%= link_to "View GIF", gif_path(gif), class: "block px-4 py-2 text-sm text-gray-400 hover:bg-gray-800 hover:text-white", data: { turbo_frame: "_top", action: "dropdown#toggle" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
<% end %>

<!-- Collection Modal (per GIF) -->
<% if user_signed_in? %>
  <div
    data-controller="collection-modal"
    data-gif-id="<%= gif.id %>"
    class="fixed inset-0 z-50 flex items-center justify-center p-4 hidden"
    data-collection-modal-target="modal"
    data-action="click->collection-modal#clickOutside"
  >
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black bg-opacity-70"></div>

    <!-- Modal Content -->
    <div class="relative bg-gray-900 rounded-lg shadow-xl max-w-md w-full max-h-[80vh] overflow-hidden border border-gray-700">
      <!-- Header -->
      <div class="flex items-center justify-between p-6 border-b border-gray-700">
        <h3 class="text-lg font-semibold text-white">Save to Collection</h3>
        <button
          data-action="click->collection-modal#hide"
          class="text-gray-400 hover:text-white transition-colors min-h-[44px] min-w-[44px] flex items-center justify-center"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Collections List -->
      <div class="overflow-y-auto max-h-[50vh] p-6">
        <% if current_user.collections.any? %>
          <div class="space-y-2">
            <% current_user.collections.order(updated_at: :desc).each do |coll| %>
              <%= button_to add_gif_collection_path(coll, gif_id: gif.id),
                  method: :post,
                  class: "w-full flex items-center justify-between p-4 border border-gray-700 rounded-lg hover:bg-gray-800 transition-colors text-left group" do %>
                <div class="flex-1 min-w-0">
                  <h4 class="font-medium text-white group-hover:text-[#E91E8C] transition-colors">
                    <%= coll.name %>
                  </h4>
                  <p class="text-sm text-gray-500">
                    <%= coll.gifs.count %> GIFs
                  </p>
                </div>
                <svg class="w-5 h-5 text-gray-500 group-hover:text-[#E91E8C] transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <!-- Empty State -->
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-600 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
            </svg>
            <p class="text-gray-400 mb-4">You don't have any collections yet</p>
            <%= link_to new_collection_path, class: "inline-block px-4 py-2 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-lg hover:opacity-90 font-medium transition-colors" do %>
              Create Collection
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Footer -->
      <div class="border-t border-gray-700 p-6">
        <%= link_to new_collection_path, class: "w-full flex items-center justify-center space-x-2 px-4 py-3 border-2 border-[#E91E8C] text-[#E91E8C] rounded-lg hover:bg-[#E91E8C]/10 font-medium transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          <span>New Collection</span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
</div>
