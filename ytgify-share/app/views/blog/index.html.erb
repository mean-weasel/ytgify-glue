<div class="min-h-screen bg-[#0a0a0a] grid-pattern">
  <div class="max-w-[800px] mx-auto px-6 sm:px-12 pt-12 pb-8">
    <%= link_to root_path, class: "inline-flex items-center gap-2 text-[#a0a0a0] hover:text-white transition-colors mb-8" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="m12 19-7-7 7-7"/><path d="M19 12H5"/>
      </svg>
      Back to Home
    <% end %>

    <header class="mb-12">
      <h1 class="text-4xl font-bold text-white mb-4">Blog</h1>
      <p class="text-[#a0a0a0] text-lg">
        Tips, tutorials, and guides for creating GIFs from YouTube videos.
      </p>
    </header>

    <% if @posts.empty? %>
      <div class="text-center py-16">
        <p class="text-[#606060] text-lg">
          No blog posts yet. Check back soon!
        </p>
      </div>
    <% else %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% @posts.each do |post| %>
          <%= render "blog/blog_card", post: post %>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= render "marketing/shared/footer" %>
</div>
