<%# Trending Page - Single-column layout with 3-panel structure %>
<%# Reference: /mockups/feed.html %>
<main class="pt-16 min-h-screen pb-20 lg:pb-0">
  <div class="max-w-7xl mx-auto flex">

    <!-- Left Sidebar (Desktop) -->
    <%= render "shared/left_sidebar" %>

    <!-- Feed Column -->
    <div class="flex-1 max-w-2xl mx-auto px-4 py-6">

      <!-- Mobile Tab Bar -->
      <div class="flex lg:hidden border-b border-gray-800 mb-6 -mx-4 px-4">
        <%= link_to root_path, class: "flex-1 py-3 text-center font-medium #{current_page?(root_path) ? 'text-[#E91E8C] border-b-2 border-[#E91E8C]' : 'text-gray-400'}" do %>
          <%= user_signed_in? ? "For You" : "Popular" %>
        <% end %>
        <%= link_to trending_path, class: "flex-1 py-3 text-center font-medium #{current_page?(trending_path) ? 'text-[#E91E8C] border-b-2 border-[#E91E8C]' : 'text-gray-400'}" do %>
          Trending
        <% end %>
        <% if user_signed_in? %>
          <%= link_to following_path, class: "flex-1 py-3 text-center font-medium #{current_page?(following_path) ? 'text-[#E91E8C] border-b-2 border-[#E91E8C]' : 'text-gray-400'}" do %>
            Following
          <% end %>
        <% end %>
      </div>

      <!-- GIF Feed Items -->
      <%= turbo_frame_tag "gifs", data: { controller: "infinite-scroll" } do %>
        <div class="space-y-8" id="gif-feed">
          <%= render partial: "gifs/gif_card", collection: @gifs, as: :gif %>
        </div>

        <!-- Load More Trigger -->
        <% if @pagy.next %>
          <%= turbo_frame_tag "page_#{@pagy.next}",
              src: url_for(page: @pagy.next),
              loading: :lazy,
              data: { infinite_scroll_target: "trigger" } do %>
            <div class="flex justify-center py-12">
              <div class="flex items-center space-x-3 text-gray-400">
                <svg class="animate-spin h-6 w-6" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span class="font-medium">Loading more GIFs...</span>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>

      <!-- Empty State -->
      <% if @gifs.empty? %>
        <div class="text-center py-20">
          <svg class="mx-auto h-24 w-24 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">No trending GIFs yet</h3>
          <p class="text-gray-400 mb-6">Check back soon to see what's hot!</p>
          <% if user_signed_in? %>
            <%= link_to new_gif_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-lg hover:opacity-90 font-medium" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Create a GIF
            <% end %>
          <% else %>
            <%= link_to new_user_session_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-lg hover:opacity-90 font-medium" do %>
              Sign In to Create
            <% end %>
          <% end %>
        </div>
      <% end %>

    </div>

    <!-- Right Sidebar (Desktop) -->
    <%= render "shared/right_sidebar" %>

  </div>
</main>

<!-- Mobile Bottom Navigation -->
<%= render "shared/mobile_bottom_nav" %>
