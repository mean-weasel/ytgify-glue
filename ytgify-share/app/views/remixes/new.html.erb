<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Remix GIF</h1>
      <p class="text-gray-600">
        Add text overlay to
        <%= link_to @source_gif.title || "this GIF", app_gif_path(@source_gif), class: "text-indigo-600 hover:text-indigo-700" %>
      </p>
    </div>

    <!-- Remix Editor -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8"
         data-controller="remix-editor"
         data-remix-editor-source-gif-id-value="<%= @source_gif.id %>"
         data-remix-editor-source-gif-url-value="<%= @source_gif.file.attached? ? url_for(@source_gif.file) : '' %>"
         data-remix-editor-width-value="<%= @source_gif.resolution_width || 500 %>"
         data-remix-editor-height-value="<%= @source_gif.resolution_height || 500 %>"
         data-remix-editor-fps-value="<%= @source_gif.fps || 15 %>">

      <!-- Left: Canvas Preview -->
      <div>
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Preview</h2>

          <div class="aspect-square bg-gray-900 rounded-lg overflow-hidden flex items-center justify-center">
            <canvas
              data-remix-editor-target="canvas"
              class="max-w-full max-h-full cursor-default"
              style="image-rendering: pixelated;">
            </canvas>
          </div>

          <p class="text-sm text-gray-500 mt-3 text-center">
            ðŸ’¡ Drag on the canvas to reposition text
          </p>
        </div>
      </div>

      <!-- Right: Controls -->
      <div>
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Text Settings</h2>

          <!-- Text Input -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Text Overlay
            </label>
            <input
              type="text"
              data-remix-editor-target="textInput"
              data-action="input->remix-editor#updateText"
              placeholder="Enter your text..."
              maxlength="100"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
          </div>

          <!-- Font Family -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Font Family
            </label>
            <select
              data-remix-editor-target="fontFamily"
              data-action="change->remix-editor#updateFontFamily"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
              <option value="Impact">Impact</option>
              <option value="Arial">Arial</option>
              <option value="Helvetica">Helvetica</option>
              <option value="Comic Sans MS">Comic Sans MS</option>
              <option value="Courier New">Courier New</option>
              <option value="Georgia">Georgia</option>
              <option value="Times New Roman">Times New Roman</option>
            </select>
          </div>

          <!-- Font Size -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Font Size: <span data-remix-editor-target="fontSizeDisplay">48</span>px
            </label>
            <input
              type="range"
              min="12"
              max="120"
              value="48"
              data-remix-editor-target="fontSize"
              data-action="input->remix-editor#updateFontSize"
              class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer">
          </div>

          <!-- Font Weight -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Font Weight
            </label>
            <div class="flex space-x-4">
              <label class="flex items-center">
                <input
                  type="radio"
                  name="font_weight"
                  value="normal"
                  data-remix-editor-target="fontWeight"
                  data-action="change->remix-editor#updateFontWeight"
                  class="mr-2">
                Normal
              </label>
              <label class="flex items-center">
                <input
                  type="radio"
                  name="font_weight"
                  value="bold"
                  checked
                  data-remix-editor-target="fontWeight"
                  data-action="change->remix-editor#updateFontWeight"
                  class="mr-2">
                Bold
              </label>
            </div>
          </div>

          <!-- Text Color -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Text Color
            </label>
            <div class="flex space-x-3">
              <input
                type="color"
                value="#ffffff"
                data-remix-editor-target="textColor"
                data-action="input->remix-editor#updateTextColor"
                class="w-12 h-12 rounded cursor-pointer">
              <input
                type="text"
                value="#ffffff"
                placeholder="#ffffff"
                readonly
                class="flex-1 px-4 py-2 border border-gray-300 rounded-lg bg-gray-50">
            </div>
          </div>

          <!-- Outline Color -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Outline Color
            </label>
            <div class="flex space-x-3">
              <input
                type="color"
                value="#000000"
                data-remix-editor-target="outlineColor"
                data-action="input->remix-editor#updateOutlineColor"
                class="w-12 h-12 rounded cursor-pointer">
              <input
                type="text"
                value="#000000"
                placeholder="#000000"
                readonly
                class="flex-1 px-4 py-2 border border-gray-300 rounded-lg bg-gray-50">
            </div>
          </div>

          <!-- Outline Width -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Outline Width: <span data-remix-editor-target="outlineWidthDisplay">3</span>px
            </label>
            <input
              type="range"
              min="0"
              max="10"
              value="3"
              data-remix-editor-target="outlineWidth"
              data-action="input->remix-editor#updateOutlineWidth"
              class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer">
          </div>

          <!-- Encoding Quality -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Encoding Quality
            </label>
            <div class="flex space-x-2 mb-3">
              <button
                type="button"
                data-quality="20"
                data-action="click->remix-editor#setQualityPreset"
                class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                Fast
              </button>
              <button
                type="button"
                data-quality="10"
                data-action="click->remix-editor#setQualityPreset"
                class="flex-1 px-3 py-2 text-sm border-2 border-indigo-600 bg-indigo-50 rounded-lg hover:bg-indigo-100 transition-colors">
                Balanced
              </button>
              <button
                type="button"
                data-quality="1"
                data-action="click->remix-editor#setQualityPreset"
                class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                Best
              </button>
            </div>
            <div class="flex items-center space-x-3">
              <span class="text-xs text-gray-500">Fast</span>
              <input
                type="range"
                min="1"
                max="20"
                value="10"
                data-remix-editor-target="quality"
                data-action="input->remix-editor#updateQuality"
                class="flex-1 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer">
              <span class="text-xs text-gray-500">Best</span>
            </div>
            <p class="text-xs text-gray-500 mt-2">
              Quality: <span data-remix-editor-target="qualityDisplay">10</span>
              (lower = better quality, larger file)
            </p>
          </div>

          <!-- Position Presets -->
          <div class="mb-8">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Text Position
            </label>
            <div class="flex space-x-3">
              <button
                type="button"
                data-position="top"
                data-action="click->remix-editor#setPositionPreset"
                class="flex-1 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                Top
              </button>
              <button
                type="button"
                data-position="center"
                data-action="click->remix-editor#setPositionPreset"
                class="flex-1 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                Center
              </button>
              <button
                type="button"
                data-position="bottom"
                data-action="click->remix-editor#setPositionPreset"
                class="flex-1 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                Bottom
              </button>
            </div>
          </div>

          <!-- Progress Bar -->
          <div class="mb-6 hidden" data-remix-editor-target="progressContainer">
            <div class="flex items-center justify-center mb-3">
              <svg class="animate-spin h-8 w-8 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </div>
            <div class="bg-gray-200 rounded-full h-3 overflow-hidden mb-2">
              <div
                data-remix-editor-target="progressBar"
                class="bg-indigo-600 h-full transition-all duration-300"
                style="width: 0%">
              </div>
            </div>
            <p class="text-sm text-gray-600 text-center" data-remix-editor-target="progressText">
              Initializing...
            </p>
            <p class="text-xs text-gray-500 text-center mt-1">
              Press ESC to cancel
            </p>
          </div>

          <!-- Generate/Cancel Buttons -->
          <div class="flex space-x-4">
            <button
              type="button"
              data-remix-editor-target="generateButton"
              data-action="click->remix-editor#generateRemix"
              class="flex-1 px-6 py-3 bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
              Generate Remix
            </button>

            <button
              type="button"
              data-remix-editor-target="cancelButton"
              data-action="click->remix-editor#cancelEncoding"
              class="hidden px-6 py-3 bg-red-600 text-white rounded-lg font-semibold hover:bg-red-700 transition-colors">
              Cancel
            </button>

            <%= link_to "Back", app_gif_path(@source_gif),
                data: { remix_editor_target: "backButton" },
                class: "px-6 py-3 border border-gray-300 rounded-lg font-semibold hover:bg-gray-50 transition-colors text-center" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
