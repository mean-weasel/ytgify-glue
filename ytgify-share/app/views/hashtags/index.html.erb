<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <!-- Page Header -->
    <div class="bg-white rounded-lg shadow-lg p-8 mb-6">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h1 class="text-4xl font-bold text-gray-900 mb-2">Browse Hashtags</h1>
          <p class="text-gray-600">Discover popular topics and trends</p>
        </div>

        <!-- Trending Link -->
        <%= link_to trending_app_hashtags_path, class: "px-6 py-3 bg-gradient-to-r from-pink-500 to-purple-600 text-white rounded-lg hover:from-pink-600 hover:to-purple-700 font-medium transition-all shadow-md hover:shadow-lg" do %>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
            <span>View Trending</span>
          </div>
        <% end %>
      </div>

      <!-- Sort Options -->
      <div class="flex items-center space-x-2 border-t border-gray-200 pt-4">
        <span class="text-sm font-medium text-gray-700">Sort by:</span>
        <%= link_to app_hashtags_path(sort: 'alphabetical'),
            class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:sort].nil? || params[:sort] == 'alphabetical' ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
          A-Z
        <% end %>
        <%= link_to app_hashtags_path(sort: 'popular'),
            class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:sort] == 'popular' ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
          Most Popular
        <% end %>
        <%= link_to app_hashtags_path(sort: 'recent'),
            class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:sort] == 'recent' ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
          Recently Added
        <% end %>
      </div>
    </div>

    <!-- Hashtags Grid -->
    <% if @hashtags.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
        <% @hashtags.each do |hashtag| %>
          <%= link_to app_hashtag_path(hashtag.name), class: "block bg-white rounded-lg shadow hover:shadow-lg transition-shadow p-6 group" do %>
            <div class="flex items-start justify-between">
              <!-- Hashtag Info -->
              <div class="flex-1 min-w-0">
                <h3 class="text-xl font-bold text-gray-900 mb-1 group-hover:text-indigo-600 transition-colors truncate">
                  #<%= hashtag.name %>
                </h3>
                <p class="text-sm text-gray-600">
                  <%= pluralize(hashtag.usage_count, 'GIF') %>
                </p>
              </div>

              <!-- Icon -->
              <div class="flex-shrink-0 ml-4">
                <svg class="w-8 h-8 text-gray-300 group-hover:text-indigo-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                </svg>
              </div>
            </div>

            <!-- Timestamp for Recent Sort -->
            <% if params[:sort] == 'recent' %>
              <p class="text-xs text-gray-500 mt-2">
                Added <%= time_ago_in_words(hashtag.created_at) %> ago
              </p>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @pagy.pages > 1 %>
        <div class="flex justify-center items-center space-x-2">
          <%== pagy_nav(@pagy, link_extra: 'class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50 transition-colors text-gray-700"') %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-lg shadow-lg p-12 text-center">
        <svg class="mx-auto h-20 w-20 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
        </svg>
        <h3 class="text-lg font-semibold text-gray-700 mb-2">No hashtags yet</h3>
        <p class="text-gray-500 mb-6">Start creating GIFs with hashtags to build the community!</p>
        <% if user_signed_in? %>
          <%= link_to new_app_gif_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium transition-colors" do %>
            Upload Your First GIF
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium transition-colors" do %>
            Sign In to Upload
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
