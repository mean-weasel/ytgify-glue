<div class="min-h-screen bg-[#0a0a0a] flex items-center justify-center p-6">
  <% if @gif %>
    <!-- GIF Found - Show the shared GIF -->
    <div class="max-w-3xl w-full">
      <!-- GIF Display -->
      <div class="mb-8 rounded-lg overflow-hidden border border-gray-800">
        <% if @gif.file.attached? %>
          <%= image_tag url_for(@gif.file),
            alt: @gif.title || "Shared GIF",
            class: "w-full h-auto" %>
        <% else %>
          <div class="aspect-video bg-gray-900 flex items-center justify-center">
            <p class="text-gray-500">GIF not available</p>
          </div>
        <% end %>
      </div>

      <!-- GIF Info -->
      <div class="text-center mb-8">
        <% if @gif.title.present? %>
          <h1 class="text-2xl font-bold text-white mb-2"><%= @gif.title %></h1>
        <% end %>
        <% if @gif.description.present? %>
          <p class="text-gray-400 mb-4"><%= @gif.description %></p>
        <% end %>
        <p class="text-gray-500 text-sm">
          Created by <%= link_to @gif.user.username, app_user_path(@gif.user.username), class: "text-[#E91E8C] hover:underline" %>
        </p>
      </div>

      <!-- CTA -->
      <div class="text-center py-6 px-6 rounded-lg bg-gray-900/50 border border-gray-800">
        <h2 class="text-xl font-bold text-white mb-3">Create your own GIFs from YouTube</h2>
        <p class="text-gray-400 mb-6">Free browser extension. No watermark. No account needed.</p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <%= render "marketing/shared/chrome_store_badge" %>
          <%= render "marketing/shared/firefox_store_badge" %>
        </div>
      </div>
    </div>
  <% else %>
    <!-- GIF Not Found - Show waitlist signup -->
    <div class="max-w-2xl text-center relative">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[300px] bg-gradient-to-r from-red-500/20 via-orange-500/20 to-yellow-500/20 blur-[100px] rounded-full pointer-events-none"></div>
      <p class="text-gray-500 text-sm tracking-widest uppercase mb-8 relative">YTgify</p>
      <h1 class="text-5xl sm:text-7xl font-bold text-white mb-6 leading-[1.1] relative">
        Your corner of YouTube.<br/><span class="bg-gradient-to-r from-red-400 via-orange-400 to-yellow-400 bg-clip-text text-transparent">All GIF'd up.</span>
      </h1>
      <p class="text-gray-400 text-xl mb-12 max-w-md mx-auto relative">
        GIFs you won't find anywhere else. Made by the YouTube-obsessed.
      </p>
      <div class="relative max-w-md mx-auto">
        <%= render "marketing/shared/email_capture_form", source: "share_page", button_text: "Join the Waitlist", success_message: "You're on the list!", placeholder: "you@example.com" %>
      </div>
      <p class="text-gray-600 text-sm mt-6 relative">
        No spam. We'll only email you when sharing launches.
      </p>
    </div>
  <% end %>
</div>
