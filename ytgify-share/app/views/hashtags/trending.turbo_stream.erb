<%= turbo_stream.replace "trending_content" do %>
  <div id="trending_content">
    <% if @hashtags.any? %>
      <div class="space-y-4 mb-8">
        <% @hashtags.each_with_index do |hashtag, index| %>
          <%= link_to hashtag_path(hashtag.name), class: "block bg-white rounded-lg shadow hover:shadow-xl transition-all p-6 group border-l-4 #{rank_border_color(index + 1 + (@pagy.page - 1) * @pagy.limit)}" do %>
            <div class="flex items-center">
              <!-- Rank Badge -->
              <div class="flex-shrink-0 mr-6">
                <div class="w-16 h-16 rounded-full flex items-center justify-center font-bold text-2xl <%= rank_badge_color(index + 1 + (@pagy.page - 1) * @pagy.limit) %>">
                  <%= index + 1 + (@pagy.page - 1) * @pagy.limit %>
                </div>
              </div>

              <!-- Hashtag Info -->
              <div class="flex-1 min-w-0">
                <h3 class="text-2xl font-bold text-gray-900 mb-1 group-hover:text-indigo-600 transition-colors truncate">
                  #<%= hashtag.name %>
                </h3>

                <div class="flex items-center space-x-4 text-sm text-gray-600">
                  <!-- Usage Count -->
                  <div class="flex items-center space-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
                    </svg>
                    <span><%= number_with_delimiter(hashtag.usage_count) %> GIFs</span>
                  </div>

                  <!-- Trending Score -->
                  <% if hashtag.respond_to?(:trending_score) && hashtag.trending_score %>
                    <div class="flex items-center space-x-1">
                      <svg class="w-4 h-4 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                      </svg>
                      <span class="text-pink-600 font-medium"><%= number_with_delimiter(hashtag.trending_score.round) %> trend score</span>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Chevron -->
              <div class="flex-shrink-0 ml-4">
                <svg class="w-6 h-6 text-gray-400 group-hover:text-indigo-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @pagy.pages > 1 %>
        <div class="flex justify-center items-center space-x-2">
          <%== pagy_nav(@pagy, link_extra: 'class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50 transition-colors text-gray-700"') %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-lg shadow-lg p-12 text-center">
        <svg class="mx-auto h-20 w-20 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
        </svg>
        <h3 class="text-lg font-semibold text-gray-700 mb-2">No trending hashtags yet</h3>
        <p class="text-gray-500 mb-6">Start creating and using hashtags to see what's trending!</p>
        <% if user_signed_in? %>
          <%= link_to new_gif_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium transition-colors" do %>
            Create a GIF
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium transition-colors" do %>
            Sign In to Create
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
