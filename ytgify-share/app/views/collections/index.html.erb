<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Public Collections</h1>
        <p class="text-gray-600">Browse curated GIF collections from the community</p>
      </div>
      <% if user_signed_in? %>
        <%= link_to new_app_collection_path, class: "px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium transition-colors" do %>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <span>Create Collection</span>
          </div>
        <% end %>
      <% end %>
    </div>

    <% if @collections.any? %>
      <!-- Collections Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <% @collections.each do |collection| %>
          <%= link_to app_collection_path(collection), class: "group" do %>
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
              <!-- Preview (first 3 GIFs if available) -->
              <div class="relative h-48 bg-gray-100">
                <% preview_gifs = collection.gifs.limit(3) %>
                <% if preview_gifs.any? %>
                  <div class="grid <%= preview_gifs.count == 1 ? 'grid-cols-1' : 'grid-cols-2' %> gap-1 h-full">
                    <% preview_gifs.each_with_index do |gif, index| %>
                      <div class="<%= index == 0 && preview_gifs.count == 3 ? 'col-span-2' : '' %> relative overflow-hidden">
                        <% if gif.file.attached? %>
                          <%= image_tag gif.file, class: "w-full h-full object-cover", alt: gif.title %>
                        <% elsif gif.thumbnail_url.present? %>
                          <%= image_tag gif.thumbnail_url, class: "w-full h-full object-cover", alt: gif.title %>
                        <% else %>
                          <div class="flex items-center justify-center h-full text-gray-300">
                            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
                            </svg>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <div class="flex items-center justify-center h-full">
                    <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                    </svg>
                  </div>
                <% end %>
              </div>

              <!-- Collection Info -->
              <div class="p-6">
                <h3 class="font-bold text-lg text-gray-900 group-hover:text-indigo-600 transition-colors mb-2">
                  <%= collection.name %>
                </h3>
                <% if collection.description.present? %>
                  <p class="text-sm text-gray-600 line-clamp-2 mb-3"><%= collection.description %></p>
                <% end %>

                <!-- Meta -->
                <div class="flex items-center justify-between text-sm">
                  <div class="flex items-center space-x-2 text-gray-500">
                    <div class="w-6 h-6 bg-indigo-600 text-white rounded-full flex items-center justify-center text-xs font-semibold">
                      <%= collection.user.username.first.upcase %>
                    </div>
                    <span>@<%= collection.user.username %></span>
                  </div>
                  <span class="text-gray-600 font-medium">
                    <%= collection.gifs.count %> GIFs
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @pagy.next %>
        <div class="text-center">
          <%= link_to app_collections_path(page: @pagy.next),
              class: "inline-block px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition-colors" do %>
            Load More
          <% end %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <svg class="mx-auto h-24 w-24 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
        </svg>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">No public collections yet</h3>
        <p class="text-gray-500 mb-6">Be the first to create a public collection!</p>
        <% if user_signed_in? %>
          <%= link_to new_app_collection_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium transition-colors" do %>
            Create Collection
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium transition-colors" do %>
            Sign In to Create Collection
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
