<%# Following Page - GIFs from users you follow %>
<main class="pt-16 min-h-screen pb-20 lg:pb-0">
  <div class="max-w-7xl mx-auto flex">

    <!-- Left Sidebar (Desktop) -->
    <%= render "shared/left_sidebar" %>

    <!-- Feed Column -->
    <div class="flex-1 max-w-2xl mx-auto px-4 py-6">

      <!-- Mobile Tab Bar -->
      <div class="flex lg:hidden border-b border-gray-800 mb-6 -mx-4 px-4">
        <%= link_to root_path, class: "flex-1 py-3 text-center font-medium text-gray-400" do %>
          For You
        <% end %>
        <%= link_to trending_path, class: "flex-1 py-3 text-center font-medium text-gray-400" do %>
          Trending
        <% end %>
        <%= link_to following_path, class: "flex-1 py-3 text-center font-medium text-[#E91E8C] border-b-2 border-[#E91E8C]" do %>
          Following
        <% end %>
      </div>

      <!-- GIF Feed Items -->
      <%= turbo_frame_tag "gifs", data: { controller: "infinite-scroll" } do %>
        <div class="space-y-8" id="gif-feed">
          <%= render partial: "gifs/gif_card", collection: @gifs, as: :gif %>
        </div>

        <!-- Load More Trigger -->
        <% if @pagy.next %>
          <%= turbo_frame_tag "page_#{@pagy.next}",
              src: url_for(page: @pagy.next),
              loading: :lazy,
              data: { infinite_scroll_target: "trigger" } do %>
            <div class="flex justify-center py-12">
              <div class="flex items-center space-x-3 text-gray-400">
                <svg class="animate-spin h-6 w-6" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span class="font-medium">Loading more GIFs...</span>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>

      <!-- Empty State -->
      <% if @gifs.empty? %>
        <div class="text-center py-20">
          <svg class="mx-auto h-24 w-24 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">No GIFs from people you follow</h3>
          <p class="text-gray-400 mb-6">Follow some creators to see their GIFs here!</p>
          <%= link_to trending_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-lg hover:opacity-90 font-medium" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
            Discover Trending Creators
          <% end %>
        </div>
      <% end %>

    </div>

    <!-- Right Sidebar (Desktop) -->
    <%= render "shared/right_sidebar" %>

  </div>
</main>

<!-- Mobile Bottom Navigation -->
<%= render "shared/mobile_bottom_nav" %>
