<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <!-- Collection Header -->
    <div class="bg-white rounded-lg shadow-lg p-8 mb-6">
      <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-6">
        <!-- Collection Info -->
        <div class="flex-1">
          <div class="flex items-center space-x-3 mb-3">
            <h1 class="text-3xl font-bold text-gray-900"><%= @collection.name %></h1>
            <% unless @collection.is_public %>
              <span class="inline-flex items-center px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                Private
              </span>
            <% end %>
          </div>

          <% if @collection.description.present? %>
            <p class="text-gray-600 mb-4 whitespace-pre-line"><%= @collection.description %></p>
          <% end %>

          <!-- Meta -->
          <div class="flex items-center space-x-6 text-sm text-gray-600">
            <%= link_to app_user_path(@collection.user.username), class: "flex items-center space-x-2 hover:text-gray-900" do %>
              <div class="w-8 h-8 bg-indigo-600 text-white rounded-full flex items-center justify-center font-semibold">
                <%= @collection.user.username.first.upcase %>
              </div>
              <span>@<%= @collection.user.username %></span>
            <% end %>
            <span><%= @collection.gifs.count %> GIFs</span>
            <span>Created <%= time_ago_in_words(@collection.created_at) %> ago</span>
          </div>
        </div>

        <!-- Actions -->
        <% if user_signed_in? && current_user == @collection.user %>
          <div class="flex items-center space-x-3">
            <%= link_to edit_app_collection_path(@collection), class: "px-6 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition-colors" do %>
              Edit
            <% end %>
            <%= button_to app_collection_path(@collection), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this collection?" }, class: "px-6 py-2 bg-red-100 hover:bg-red-200 text-red-700 rounded-lg font-medium transition-colors" do %>
              Delete
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- GIFs Grid -->
    <% if @gifs.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
        <% @gifs.each do |gif| %>
          <div id="gif_<%= gif.id %>">
            <%= render partial: "gifs/gif_card", locals: { gif: gif, show_remove_button: user_signed_in? && current_user == @collection.user, collection: @collection } %>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @pagy.next %>
        <div class="text-center">
          <%= link_to app_collection_path(@collection, page: @pagy.next),
              class: "inline-block px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition-colors" do %>
            Load More
          <% end %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-lg shadow-lg p-12 text-center">
        <svg class="mx-auto h-20 w-20 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
        </svg>
        <h3 class="text-lg font-semibold text-gray-700 mb-2">No GIFs in this collection yet</h3>
        <% if user_signed_in? && current_user == @collection.user %>
          <p class="text-gray-500 mb-6">Start adding GIFs to this collection from any GIF page</p>
          <%= link_to root_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium transition-colors" do %>
            Browse GIFs
          <% end %>
        <% else %>
          <p class="text-gray-500">This collection is empty</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
