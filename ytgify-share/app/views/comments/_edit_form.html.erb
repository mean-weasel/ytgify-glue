<%= turbo_frame_tag dom_id(comment) do %>
  <%= form_with model: comment,
                url: comment_path(comment),
                method: :patch,
                class: "flex space-x-3" do |f| %>
    <!-- User Avatar -->
    <div class="w-10 h-10 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-full flex items-center justify-center font-semibold flex-shrink-0">
      <%= comment.user.username.first.upcase %>
    </div>

    <div class="flex-1 min-w-0">
      <div class="bg-gray-800 rounded-lg px-4 py-3">
        <%= f.text_area :content,
            rows: 3,
            autofocus: true,
            class: "w-full px-2 py-1 bg-gray-900 border border-gray-700 rounded text-white placeholder-gray-500 focus:ring-2 focus:ring-[#E91E8C] focus:border-transparent resize-none #{'border-red-500' if comment.errors.any?}" %>

        <% if comment.errors.any? %>
          <div class="mt-2 text-sm text-red-400">
            <%= comment.errors.full_messages.to_sentence %>
          </div>
        <% end %>

        <div class="mt-2 flex justify-end space-x-2">
          <%= link_to "Cancel",
              "#",
              data: { action: "turbo:click->turbo#reload" },
              class: "px-4 py-2 text-sm text-gray-300 bg-gray-800 border border-gray-700 rounded hover:bg-gray-700" %>
          <%= f.submit "Save",
              class: "px-4 py-2 text-sm bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded hover:opacity-90 cursor-pointer",
              data: { turbo_submits_with: "Saving..." } %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
