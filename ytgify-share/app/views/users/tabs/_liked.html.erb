<% if gifs.any? %>
  <!-- Liked GIFs Feed - Single column -->
  <div class="space-y-8">
    <%= render partial: "gifs/gif_card", collection: gifs, as: :gif %>
  </div>

  <!-- Pagination -->
  <% if pagy.pages > 1 %>
    <div class="flex justify-center items-center space-x-2 mt-8">
      <%== pagy_nav(pagy, link_extra: 'data-turbo-frame="profile_content" class="px-4 py-2 border border-gray-700 rounded-md hover:bg-gray-800 transition-colors text-gray-300"') %>
    </div>
  <% end %>
<% else %>
  <!-- Empty State -->
  <div class="text-center py-16">
    <svg class="mx-auto h-16 w-16 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
    </svg>

    <h3 class="text-xl font-semibold text-white mb-2">No liked GIFs</h3>

    <p class="text-gray-400 mb-6">
      <% if user_signed_in? && current_user == user %>
        You haven't liked any GIFs yet. Explore and like your favorites!
      <% else %>
        <%= user.display_name || user.username %> hasn't liked any GIFs yet.
      <% end %>
    </p>

    <% if user_signed_in? && current_user == user %>
      <%= link_to root_path,
          class: "inline-block px-6 py-3 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-full hover:opacity-90 font-medium transition" do %>
        Explore GIFs
      <% end %>
    <% end %>
  </div>
<% end %>
