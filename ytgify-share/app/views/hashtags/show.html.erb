<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <!-- Hashtag Header -->
    <div class="bg-white rounded-lg shadow-lg p-8 mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold text-gray-900 mb-2">#<%= @hashtag.name %></h1>
          <p class="text-gray-600">
            <%= pluralize(@hashtag.gifs.where(privacy: 'public').count, 'public GIF') %>
          </p>
        </div>

        <!-- Optional: Add follow hashtag feature later -->
        <div class="flex items-center space-x-2 text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
          </svg>
        </div>
      </div>
    </div>

    <!-- GIFs Grid -->
    <% if @gifs.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
        <%= render partial: "gifs/gif_card", collection: @gifs, as: :gif %>
      </div>

      <!-- Pagination -->
      <% if @pagy.next %>
        <div class="text-center">
          <%= link_to hashtag_path(@hashtag.name, page: @pagy.next),
              class: "inline-block px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition-colors" do %>
            Load More
          <% end %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-lg shadow-lg p-12 text-center">
        <svg class="mx-auto h-20 w-20 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
        </svg>
        <h3 class="text-lg font-semibold text-gray-700 mb-2">No GIFs with this hashtag yet</h3>
        <p class="text-gray-500 mb-6">Be the first to add a GIF with #<%= @hashtag.name %></p>
        <% if user_signed_in? %>
          <%= link_to new_gif_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium transition-colors" do %>
            Upload GIF
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium transition-colors" do %>
            Sign In to Upload
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
