<div class="bg-gray-900 rounded-lg border border-gray-800 p-8">
  <%= form_with model: collection, url: (collection.new_record? ? collections_path : collection_path(collection)), class: "space-y-6" do |f| %>
    <%= render "shared/error_messages", resource: collection %>

    <!-- Name -->
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.text_field :name,
          autofocus: true,
          placeholder: "My Awesome Collection",
          class: "w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-[#E91E8C] focus:border-transparent" %>
    </div>

    <!-- Description -->
    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.text_area :description,
          rows: 4,
          placeholder: "Describe what this collection is about...",
          class: "w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-[#E91E8C] focus:border-transparent resize-none" %>
    </div>

    <!-- Privacy Settings -->
    <div>
      <%= f.label :is_public, "Who can see this collection?", class: "block text-sm font-medium text-gray-300 mb-3" %>
      <div class="space-y-3">
        <label class="flex items-start p-4 bg-gray-800 border border-gray-700 rounded-lg cursor-pointer hover:border-gray-600 transition-colors">
          <%= f.radio_button :is_public, true, class: "mt-1 text-[#E91E8C] focus:ring-[#E91E8C] bg-gray-700 border-gray-600" %>
          <div class="ml-3 flex-1">
            <div class="flex items-center space-x-2 mb-1">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium text-white">Public</span>
            </div>
            <p class="text-sm text-gray-400">Anyone can see this collection</p>
          </div>
        </label>

        <label class="flex items-start p-4 bg-gray-800 border border-gray-700 rounded-lg cursor-pointer hover:border-gray-600 transition-colors">
          <%= f.radio_button :is_public, false, class: "mt-1 text-[#E91E8C] focus:ring-[#E91E8C] bg-gray-700 border-gray-600" %>
          <div class="ml-3 flex-1">
            <div class="flex items-center space-x-2 mb-1">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              <span class="font-medium text-white">Private</span>
            </div>
            <p class="text-sm text-gray-400">Only you can see this collection</p>
          </div>
        </label>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-between pt-4">
      <%= link_to "Cancel", collection.new_record? ? collections_path : collection_path(collection), class: "px-6 py-3 text-gray-400 hover:text-white font-medium" %>
      <%= f.submit collection.new_record? ? "Create Collection" : "Update Collection", class: "px-6 py-3 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-lg hover:opacity-90 font-medium cursor-pointer transition-colors" %>
    </div>
  <% end %>
</div>
