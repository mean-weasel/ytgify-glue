<%= turbo_stream.replace "profile_content" do %>
  <div class="p-6">
    <% if @tab == 'collections' %>
      <!-- Collections Tab -->
      <% if @collections&.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @collections.each do |collection| %>
            <%= link_to app_collection_path(collection), class: "group" do %>
              <div class="bg-gray-100 rounded-lg p-6 hover:bg-gray-200 transition-colors">
                <div class="flex items-center justify-between mb-3">
                  <h3 class="font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors">
                    <%= collection.name %>
                  </h3>
                  <span class="text-sm text-gray-600">
                    <%= collection.gifs.count %> GIFs
                  </span>
                </div>
                <% if collection.description.present? %>
                  <p class="text-sm text-gray-600 line-clamp-2"><%= collection.description %></p>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <!-- Empty state -->
        <div class="text-center py-12">
          <svg class="mx-auto h-16 w-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
          </svg>
          <h3 class="text-lg font-semibold text-gray-700 mb-2">No collections yet</h3>
          <% if current_user == @user %>
            <p class="text-gray-500 mb-4">Start organizing your GIFs into collections</p>
            <%= link_to new_app_collection_path, class: "inline-block px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium" do %>
              Create Collection
            <% end %>
          <% else %>
            <p class="text-gray-500">This user hasn't created any collections yet</p>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <!-- GIFs Tab (gifs or liked) -->
      <% if @gifs&.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          <%= render partial: "gifs/gif_card", collection: @gifs, as: :gif %>
        </div>

        <!-- Pagination -->
        <% if @pagy.next %>
          <div class="mt-8 text-center">
            <%= link_to app_user_path(@user.username, tab: @tab, page: @pagy.next),
                data: { turbo_frame: "profile_content" },
                class: "inline-block px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition-colors" do %>
              Load More
            <% end %>
          </div>
        <% end %>
      <% else %>
        <!-- Empty state -->
        <div class="text-center py-12">
          <svg class="mx-auto h-16 w-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
          </svg>
          <h3 class="text-lg font-semibold text-gray-700 mb-2">
            <% if @tab == 'liked' %>
              No liked GIFs yet
            <% else %>
              No GIFs yet
            <% end %>
          </h3>
          <% if current_user == @user %>
            <% if @tab == 'liked' %>
              <p class="text-gray-500 mb-4">Start liking GIFs you enjoy</p>
              <%= link_to root_path, class: "inline-block px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium" do %>
                Explore GIFs
              <% end %>
            <% else %>
              <p class="text-gray-500 mb-4">Upload your first GIF to get started</p>
              <%= link_to new_app_gif_path, class: "inline-block px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium" do %>
                Upload GIF
              <% end %>
            <% end %>
          <% else %>
            <p class="text-gray-500">
              <% if @tab == 'liked' %>
                This user hasn't liked any GIFs yet
              <% else %>
                This user hasn't uploaded any GIFs yet
              <% end %>
            </p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
