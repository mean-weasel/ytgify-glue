<%# Empty state component for better UX when no content %>
<%# Usage: render "shared/empty_state", title: "...", description: "...", action_path: "...", action_text: "..." %>

<div class="text-center py-12 px-4">
  <% if local_assigns[:icon_svg] %>
    <svg class="mx-auto h-12 w-12 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <%= icon_svg.html_safe %>
    </svg>
  <% else %>
    <svg class="mx-auto h-12 w-12 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
    </svg>
  <% end %>

  <h3 class="text-lg font-medium text-gray-900 mb-2"><%= title %></h3>
  <p class="text-gray-600 mb-6 max-w-sm mx-auto"><%= description %></p>

  <% if local_assigns[:action_path] && local_assigns[:action_text] %>
    <%= link_to action_text, action_path, class: "inline-flex items-center px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      <%= action_text %>
    <% end %>
  <% end %>
</div>
