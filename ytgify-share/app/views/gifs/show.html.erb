<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content (Left - 2/3) -->
      <div class="lg:col-span-2">
        <!-- GIF Display -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-6">
          <div class="aspect-video bg-gray-900 flex items-center justify-center">
            <% if @gif.file.attached? %>
              <%= image_tag @gif.file, alt: @gif.title, class: "max-w-full max-h-full object-contain" %>
            <% elsif @gif.thumbnail_url.present? %>
              <%= image_tag @gif.thumbnail_url, alt: @gif.title, class: "max-w-full max-h-full object-contain" %>
            <% else %>
              <div class="text-gray-400">
                <svg class="w-32 h-32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
                </svg>
              </div>
            <% end %>
          </div>

          <!-- GIF Info Bar -->
          <div class="p-4 border-t border-gray-200">
            <div class="flex items-center justify-between">
              <!-- Like, Comment, View Counts -->
              <div class="flex items-center space-x-6">
                <%= turbo_frame_tag "like_#{@gif.id}" do %>
                  <% if user_signed_in? %>
                    <%= form_with url: like_gif_path(@gif),
                        method: :post,
                        data: { controller: "like" } do %>
                      <button type="submit" class="flex items-center space-x-2 hover:text-red-500 transition-colors group">
                        <svg data-like-target="icon"
                             class="w-6 h-6 <%= 'fill-current text-red-500' if current_user.liked?(@gif) %>"
                             fill="<%= current_user.liked?(@gif) ? 'currentColor' : 'none' %>"
                             stroke="currentColor"
                             viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                        <span data-like-target="count" class="text-lg font-semibold"><%= @gif.like_count %></span>
                      </button>
                    <% end %>
                  <% else %>
                    <%= link_to new_user_session_path, class: "flex items-center space-x-2 text-gray-600 hover:text-red-500" do %>
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                      </svg>
                      <span class="text-lg font-semibold"><%= @gif.like_count %></span>
                    <% end %>
                  <% end %>
                <% end %>

                <%= render "comments/count", gif: @gif %>

                <div class="flex items-center space-x-2 text-gray-600">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  <span class="text-lg font-semibold"><%= @gif.view_count || 0 %></span>
                </div>
              </div>

              <!-- Share Button -->
              <button class="flex items-center space-x-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                </svg>
                <span class="font-medium">Share</span>
              </button>

              <!-- Remix Button -->
              <% if user_signed_in? && @gif.remixable_by?(current_user) %>
                <%= link_to remix_gif_path(@gif),
                    class: "flex items-center space-x-2 px-4 py-2 bg-indigo-600 text-white hover:bg-indigo-700 rounded-lg transition-colors" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  <span class="font-medium">Remix</span>
                <% end %>
              <% elsif !user_signed_in? %>
                <%= link_to new_user_session_path,
                    class: "flex items-center space-x-2 px-4 py-2 bg-gray-100 text-gray-700 hover:bg-gray-200 rounded-lg transition-colors" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  <span class="font-medium">Sign in to Remix</span>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Comments Section -->
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-6">
            Comments
            <span id="comment_count_header_<%= @gif.id %>" class="text-gray-600">(<%= @gif.comment_count %>)</span>
          </h2>

          <!-- Comment Form -->
          <% if user_signed_in? %>
            <%= turbo_frame_tag "new_comment" do %>
              <%= render "comments/form", gif: @gif, comment: nil %>
            <% end %>
          <% else %>
            <div class="mb-8 text-center py-6 bg-gray-50 rounded-lg">
              <p class="text-gray-600 mb-3">Sign in to leave a comment</p>
              <%= link_to "Sign In", new_user_session_path, class: "inline-block px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium" %>
            </div>
          <% end %>

          <!-- Comments List -->
          <%= turbo_frame_tag "comments", class: "space-y-6" do %>
            <% if @comments.any? %>
              <%= render partial: "comments/comment", collection: @comments %>
            <% else %>
              <div class="text-center py-12 text-gray-500">
                <svg class="mx-auto h-12 w-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                <p>No comments yet. Be the first!</p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Sidebar (Right - 1/3) -->
      <div class="lg:col-span-1">
        <!-- Title and Description -->
        <%= turbo_frame_tag dom_id(@gif) do %>
          <%= render "gif_display", gif: @gif %>
        <% end %>

        <!-- Creator Info -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
          <div class="flex items-center justify-between mb-4">
            <%= link_to user_path(@gif.user.username), class: "flex items-center space-x-3 flex-1 min-w-0" do %>
              <div class="w-12 h-12 bg-indigo-600 text-white rounded-full flex items-center justify-center font-semibold text-lg flex-shrink-0">
                <%= @gif.user.username.first.upcase %>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold text-gray-900 truncate"><%= @gif.user.display_name %></div>
                <div class="text-sm text-gray-600">@<%= @gif.user.username %></div>
              </div>
            <% end %>

            <%= render "follows/button", user: @gif.user %>
          </div>

          <!-- Follower Count -->
          <div class="mb-4">
            <%= render "follows/follower_count", user: @gif.user %>
          </div>

          <% if @gif.user.bio.present? %>
            <p class="text-sm text-gray-600"><%= @gif.user.bio %></p>
          <% end %>
        </div>

        <!-- Video Source -->
        <% if @gif.youtube_video_url.present? %>
          <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
            <h3 class="font-semibold text-gray-900 mb-3">Source</h3>
            <%= link_to @gif.youtube_video_url,
                target: "_blank",
                rel: "noopener noreferrer",
                class: "flex items-center space-x-2 text-indigo-600 hover:text-indigo-700" do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
              <span>Watch on YouTube</span>
            <% end %>
            <% if @gif.youtube_timestamp_start && @gif.youtube_timestamp_end %>
              <div class="mt-2 text-sm text-gray-600">
                <%= Time.at(@gif.youtube_timestamp_start).utc.strftime("%M:%S") %> - <%= Time.at(@gif.youtube_timestamp_end).utc.strftime("%M:%S") %>
              </div>
            <% end %>
          </div>
        <% end %>

        <!-- Actions (if owner) -->
        <% if user_signed_in? && current_user == @gif.user %>
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="font-semibold text-gray-900 mb-3">Manage</h3>
            <div class="space-y-2">
              <%= link_to edit_gif_path(@gif), class: "block w-full text-center px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg font-medium transition-colors" do %>
                Edit GIF
              <% end %>
              <%= button_to gif_path(@gif),
                  method: :delete,
                  data: { turbo_confirm: "Are you sure you want to delete this GIF?" },
                  class: "block w-full text-center px-4 py-2 bg-red-100 text-red-700 hover:bg-red-200 rounded-lg font-medium transition-colors" do %>
                Delete GIF
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
