<% if following&.any? %>
  <!-- Following List -->
  <div class="space-y-4 mb-8">
    <% following.each do |followed_user| %>
      <div class="flex items-center justify-between py-3">
        <!-- User Info -->
        <%= link_to user_path(followed_user.username), class: "flex items-center space-x-3 flex-1 min-w-0" do %>
          <!-- Avatar -->
          <div class="w-12 h-12 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] rounded-full flex items-center justify-center font-bold text-lg flex-shrink-0">
            <%= followed_user.username.first.upcase %>
          </div>

          <!-- Details -->
          <div class="flex-1 min-w-0">
            <div class="font-medium text-white truncate hover:text-[#E91E8C] transition">
              <%= followed_user.display_name || followed_user.username %>
            </div>
            <div class="text-sm text-gray-500">
              <%= number_to_human(followed_user.follower_count || 0, precision: 1, significant: false, format: '%n%u', units: { thousand: 'k', million: 'M' }) %> followers
            </div>
          </div>
        <% end %>

        <!-- Follow Button -->
        <% if user_signed_in? && current_user != followed_user %>
          <% if current_user.following?(followed_user) %>
            <%= button_to follow_user_path(followed_user.username),
                method: :post,
                class: "px-4 py-2 border border-gray-600 text-gray-400 rounded-full text-sm font-medium hover:bg-gray-800 transition" do %>
              Following
            <% end %>
          <% else %>
            <%= button_to follow_user_path(followed_user.username),
                method: :post,
                class: "px-4 py-2 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] rounded-full text-sm font-medium hover:opacity-90 transition" do %>
              Follow
            <% end %>
          <% end %>
        <% elsif !user_signed_in? %>
          <%= link_to new_user_session_path, class: "px-4 py-2 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] rounded-full text-sm font-medium hover:opacity-90 transition" do %>
            Follow
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <% if pagy.pages > 1 %>
    <div class="flex justify-center items-center space-x-2">
      <%== pagy_nav(pagy, link_extra: 'data-turbo-frame="profile_content" class="px-4 py-2 border border-gray-700 rounded-md hover:bg-gray-800 transition text-gray-300"') %>
    </div>
  <% end %>
<% else %>
  <!-- Empty State -->
  <div class="text-center py-16">
    <svg class="mx-auto h-16 w-16 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
    </svg>

    <h3 class="text-xl font-semibold text-white mb-2">Not following anyone yet</h3>

    <p class="text-gray-400 mb-6">
      <% if user_signed_in? && current_user == user %>
        You're not following anyone yet. Discover creators and start building your feed!
      <% else %>
        <%= user.display_name || user.username %> isn't following anyone yet.
      <% end %>
    </p>

    <% if user_signed_in? && current_user == user %>
      <%= link_to trending_path,
          class: "inline-block px-6 py-3 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-full hover:opacity-90 font-medium transition" do %>
        Discover Creators
      <% end %>
    <% end %>
  </div>
<% end %>
