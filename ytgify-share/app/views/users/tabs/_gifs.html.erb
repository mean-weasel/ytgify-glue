<% if gifs.any? %>
  <!-- GIFs Feed - Single column -->
  <div class="space-y-8">
    <%= render partial: "gifs/gif_card", collection: gifs, as: :gif %>
  </div>

  <!-- Pagination -->
  <% if pagy.pages > 1 %>
    <div class="flex justify-center items-center space-x-2 mt-8">
      <%== pagy_nav(pagy, link_extra: 'data-turbo-frame="profile_content" class="px-4 py-2 border border-gray-700 rounded-md hover:bg-gray-800 transition-colors text-gray-300"') %>
    </div>
  <% end %>
<% else %>
  <!-- Empty State -->
  <div class="text-center py-16">
    <svg class="mx-auto h-16 w-16 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
    </svg>

    <h3 class="text-xl font-semibold text-white mb-2">No GIFs yet</h3>

    <p class="text-gray-400 mb-6">
      <% if user_signed_in? && current_user == user %>
        You haven't created any GIFs yet. Start creating!
      <% else %>
        <%= user.display_name || user.username %> hasn't created any GIFs yet.
      <% end %>
    </p>

    <% if user_signed_in? && current_user == user %>
      <%= link_to new_gif_path,
          class: "inline-block px-6 py-3 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-full hover:opacity-90 font-medium transition" do %>
        Create Your First GIF
      <% end %>
    <% end %>
  </div>
<% end %>
