<% if collections.any? %>
  <!-- Collections Grid - max 2 columns -->
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
    <% collections.each do |collection| %>
      <%= link_to collection_path(collection),
          class: "block rounded-xl overflow-hidden group" do %>

        <!-- Collection Preview Grid (2x2 of first 4 GIFs) -->
        <div class="aspect-square bg-gray-800 grid grid-cols-2 gap-0.5 relative rounded-xl overflow-hidden">
          <% preview_gifs = collection.gifs.limit(4) %>

          <% preview_gifs.each do |gif| %>
            <div class="bg-gray-900 flex items-center justify-center overflow-hidden">
              <% if gif.file.attached? %>
                <%= image_tag url_for(gif.file), class: "w-full h-full object-cover", alt: gif.title || "GIF" %>
              <% elsif gif.thumbnail_url.present? %>
                <%= image_tag gif.thumbnail_url, class: "w-full h-full object-cover", alt: gif.title || "GIF" %>
              <% else %>
                <div class="text-gray-600">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
                  </svg>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- Fill empty slots if less than 4 GIFs -->
          <% (4 - preview_gifs.count).times do %>
            <div class="bg-gray-800 flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          <% end %>

          <!-- Privacy Badge (if private and viewing own profile) -->
          <% unless collection.is_public %>
            <div class="absolute top-2 right-2 bg-gray-900/90 text-gray-300 text-xs px-2 py-1 rounded-full flex items-center space-x-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              <span>Private</span>
            </div>
          <% end %>
        </div>

        <!-- Collection Info -->
        <div class="pt-3">
          <h3 class="font-semibold text-white mb-1 group-hover:text-[#E91E8C] transition line-clamp-1">
            <%= collection.name %>
          </h3>

          <% if collection.description.present? %>
            <p class="text-sm text-gray-400 mb-1 line-clamp-1">
              <%= collection.description %>
            </p>
          <% end %>

          <span class="text-gray-500 text-sm">
            <%= pluralize(collection.gifs.count, "GIF") %>
          </span>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Pagination -->
  <% if pagy.pages > 1 %>
    <div class="flex justify-center items-center space-x-2">
      <%== pagy_nav(pagy, link_extra: 'data-turbo-frame="profile_content" class="px-4 py-2 border border-gray-700 rounded-md hover:bg-gray-800 transition text-gray-300"') %>
    </div>
  <% end %>
<% else %>
  <!-- Empty State -->
  <div class="text-center py-16">
    <svg class="mx-auto h-16 w-16 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
    </svg>

    <h3 class="text-xl font-semibold text-white mb-2">No collections</h3>

    <p class="text-gray-400 mb-6">
      <% if user_signed_in? && current_user == user %>
        You haven't created any collections yet. Start organizing your favorite GIFs!
      <% else %>
        <%= user.display_name || user.username %> hasn't created any public collections yet.
      <% end %>
    </p>

    <% if user_signed_in? && current_user == user %>
      <%= link_to new_collection_path,
          class: "inline-block px-6 py-3 bg-gradient-to-r from-[#E91E8C] to-[#7B2FBE] text-white rounded-full hover:opacity-90 font-medium transition" do %>
        Create Your First Collection
      <% end %>
    <% end %>
  </div>
<% end %>
