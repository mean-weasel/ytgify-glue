<div class="min-h-screen bg-[#0a0a0a] grid-pattern">
  <!-- Ultra Narrow Blog Style - Max 800px -->
  <article class="max-w-[800px] mx-auto px-12 sm:px-6 pt-12 pb-16">
    <!-- Logo -->
    <div class="flex items-center justify-center gap-3 mt-2 mb-8">
      <%= render "marketing/shared/logo" %>
      <h2 class="text-4xl sm:text-5xl font-bold text-white">YTgify</h2>
    </div>

    <!-- Discontinuation Notice and Local Install Instructions -->
    <%= render "marketing/shared/discontinuation_notice" %>

    <!-- Large headline -->
    <h1 class="text-3xl sm:text-4xl font-bold mb-8 leading-tight text-white tracking-tight">
      YouTube to GIF Converter - Free, No Watermark
    </h1>

    <!-- Description and Example GIFs - Two Column Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 mb-10">
      <!-- Left: Description -->
      <div>
        <p class="text-xl sm:text-2xl text-white leading-normal font-normal">
          Create animated GIFs from any YouTube video in seconds - no watermark, no uploads, no external tools. Just click, trim, and share.
        </p>
      </div>

      <!-- Right: GIF Gallery -->
      <div class="flex items-center">
        <%= render "marketing/shared/example_gifs_gallery" %>
      </div>
    </div>

    <!-- Benefit Callout -->
    <div class="text-center mb-16 py-6 px-4 rounded-lg bg-gray-900/50 border border-gray-800">
      <p class="text-lg text-white font-semibold mb-1">Your first GIF in under 30 seconds.</p>
      <p class="text-gray-400">No account needed. No software to download. Works right inside YouTube.</p>
    </div>

    <!-- Features and Video - Single Section -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold mb-6 text-white">See it in action</h2>
      <!-- Features above video -->
      <div class="mb-6">
        <%= render "marketing/shared/feature_checklist" %>
      </div>
      <!-- Video -->
      <%= render "marketing/shared/demo_video" %>

      <!-- CTA after video -->
      <div class="mt-12 text-center">
        <p class="text-xl text-white mb-6 font-semibold">Ready to create your first GIF?</p>
        <a href="/downloads/ytgify-v1.0.19-chrome.zip"
           download
           class="inline-flex items-center gap-3 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          Download YTgify for Chrome
        </a>
        <p class="text-gray-400 text-sm mt-4">100% free. No watermark. No tracking. Ever.</p>
        <p class="text-gray-500 text-xs mt-2">See installation instructions above</p>
      </div>
    </div>
  </article>

  <%= render "marketing/shared/footer" %>
</div>
